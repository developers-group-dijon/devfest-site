---js
{
    pagination: {
        data: "speakers",
        size: 1,
        alias: "speaker",
    },
    permalink: "/speaker/{{ speaker.id | slugify }}/",
    layout: "page.njk",
    // image: "/team/background.jpg"
    css: "/css/speaker.css",
    eleventyComputed:{
        title: "{{ speaker.name }}",
        description: "{{ speaker.jobTitle }} {{ speaker.company }}",
        speakerSessions: function(data) { return (data.sessions || []).filter((s) => (s.speakerIds || []).includes(data.speaker.id)); },
    },
}
---

<div class="speaker">
    <div>
        <img class="avatar" src="{{ (speaker.photoUrl if speaker.photoUrl else '/speakers/defaut.png') | normalizeAssetUrl }}" alt="avatar">
        <div class="job_title">{{ speaker.bio | md | safe }}</div>
        <div class="socials">
            {%- for social in speaker.socials %}
            <a class="social-icon" href="{{ social.link | socialLink(social.id) }}" title="{{ social.name }} â‹… {{ social.link }}">{{ social.id | socialIconSvg | safe }}</a>
            {%- endfor -%}
        </div>
    </div>
    <div class="sessions">
        <h3>Sessions</h3>
        <ul>
            {%- for session in speakerSessions %}
            <li><a class="session-name" href="/session/{{ session.id | slugify }}">{{ session.title }}</a></li>
            {%- endfor -%}
        </ul>
    </div>
</div>
