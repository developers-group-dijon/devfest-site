{
  "name": "biblio-tech",
  "private": true,
  "scripts": {
    "clean": "rm -rf _site",
    "build:eleventy": "ELEVENTY_PRODUCTION=true eleventy",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint '_assets/**/*.css'",
    "lint:jsdoc": "node_modules/.bin/tsc",
    "lint": "run-p lint:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint --fix .",
    "format:stylelint": "stylelint '_assets/**/*.css' --fix",
    "format": "run-p format:*",
    "build": "run-s build:eleventy",
    "clean-build": "run-s clean build",
    "clean-serve-noinc": "run-s clean serve-noinc",
    "serve-noinc": "eleventy --serve",
    "serve": "eleventy --serve --incremental"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@types/debug": "^4.1.12",
    "@types/markdown-it": "^13.0.7",
    "debug": "^4.3.4",
    "eslint": "^8.56.0",
    "eslint-plugin-jsdoc": "^48.0.2",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "node-html-parser": "^6.1.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fontsource/poppins": "^5.0.8",
    "@fortawesome/fontawesome-free": "^6.5.1"
  }
}
