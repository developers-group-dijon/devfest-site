---
layout: base.njk
---

{%- if css %}
<link rel="stylesheet" type="text/css" href="{{ css | normalizeAssetUrl }}" />
{%- endif -%}
<div class="page-header-image" style="background-image: url({{ (image if image else '/default-background.jpg') | normalizeAssetUrl }});">
  <div class="page-header">
    <div class="centered-content">
      <h1>{{ title }}</h1>
      <div class="page-description">{{ description | md | safe }}</div>
    </div>
  </div>
</div>
<div class="centered-content page-content">
  {{ content | safe }}
</div>
